<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/doubleChoiceContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/popup_title_margin_bottom"
        android:layout_marginTop="@dimen/popup_margin_top"
        android:gravity="center_horizontal"
        android:textColor="@color/popup_title_color"
        android:textSize="@dimen/popup_title_size" />

    <View
        style="@style/DividerLine1pxStyle"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/popup_btn_height"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/errorBtn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/list_item_background"
            android:textColor="@color/popup_btn_text_lowlight_color"
            android:textSize="@dimen/popup_btn_text_size" />

        <View
            style="@style/VerticalLine1pxStyle" />

        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/list_item_background"
            android:textColor="@color/popup_btn_text_highlight_color"
            android:textSize="@dimen/popup_btn_text_size" />

    </LinearLayout>
</LinearLayout>