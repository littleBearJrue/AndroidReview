<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/popup_title_margin_bottom"
        android:layout_marginTop="@dimen/popup_margin_top"
        android:text="@string/util_prompt_title"
        android:textColor="@color/popup_title_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/hintContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/popup_title_margin_bottom"
        android:layout_marginLeft="@dimen/popup_margin_left"
        android:layout_marginRight="@dimen/popup_margin_right"
        android:layout_marginTop="@dimen/popup_margin_top"
        android:gravity="left"
        android:textColor="@color/popup_title_color"
        android:textSize="@dimen/popup_title_size" />

    <View
        style="@style/DividerLine1pxStyle"
        android:layout_marginTop="30dip"/>

    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_item_background"
        android:text="@string/util_common_confirm"
        android:textColor="@color/popup_btn_text_highlight_color"
        android:textSize="@dimen/popup_btn_text_size" />

</LinearLayout>