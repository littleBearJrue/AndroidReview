<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/popup_margin_small_bottom"
        android:layout_marginTop="@dimen/popup_margin_top"
        android:gravity="center_horizontal"
        android:textColor="@color/popup_title_color"
        android:textSize="@dimen/popup_title_size"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/popup_margin_left"
        android:layout_marginRight="@dimen/popup_margin_right"
        android:layout_marginTop="@dimen/popup_margin_top"
        android:background="@null"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="@color/popup_edit_text_color"
        android:textColorHint="@color/popup_edit_text_hint_color"
        android:textSize="@dimen/popup_edit_text_size"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="@dimen/popup_margin_left"
        android:layout_marginRight="@dimen/popup_margin_right"
        android:layout_marginTop="10dip"
        android:background="@color/popup_line_color"/>

    <TextView
        android:id="@+id/promptText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="0dip"
        android:layout_marginTop="0dip"
        android:gravity="center_horizontal"
        android:textColor="@color/popup_prompt_text_color"
        android:textSize="@dimen/popup_prompt_text_size"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        android:background="@color/popup_line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/popup_btn_height"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/list_item_background"
            android:text="@string/util_common_cancel"
            android:textColor="@color/popup_btn_text_lowlight_color"
            android:textSize="@dimen/popup_btn_text_size"/>


        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/popup_line_color"/>

        <Button
            android:id="@+id/okBtn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/list_item_background"
            android:text="@string/util_common_ok"
            android:textColor="@color/popup_btn_text_highlight_color"
            android:textSize="@dimen/popup_btn_text_size"/>

    </LinearLayout>
</LinearLayout>