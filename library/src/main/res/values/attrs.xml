<resources>
    <declare-styleable name="HomeDeviceView">
        <attr name="mzszAttrSize" format="dimension"/>
        <attr name="mzszAttrColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="ListItemAppearance">
        <!-- For top -->
        <attr name="mzszIconTop" format="reference"/>
        <attr name="mzszTextTop" format="string"/>
        <!-- For bottom -->
        <attr name="mzszIconBottom" format="reference"/>
        <attr name="mzszTextBottom" format="string"/>
        <!-- For start -->
        <attr name="mzszIconStart" format="reference"/>
        <attr name="mzszTextStart" format="string"/>
        <!-- For end -->
        <attr name="mzszIconEnd" format="reference"/>
        <attr name="mzszTextEnd" format="string"/>
        <!-- For Progress -->
        <attr name="mzszProgressImage" format="reference"/>
        <attr name="mzszProgressPaddingLeft" format="dimension"/>
        <attr name="mzszProgressPaddingRight" format="dimension"/>
        <attr name="mzszProgressPaddingTop" format="dimension"/>
        <attr name="mzszProgressPaddingBottom" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color"/>
        <attr name="pstsUnderlineColor" format="color"/>
        <attr name="pstsDividerColor" format="color"/>
        <attr name="pstsIndicatorHeight" format="dimension"/>
        <attr name="pstsUnderlineHeight" format="dimension"/>
        <attr name="pstsDividerPadding" format="dimension"/>
        <attr name="pstsTabTextSize" format="dimension"/>
        <attr name="pstsTabPaddingLeftRight" format="dimension"/>
        <attr name="pstsScrollOffset" format="dimension"/>
        <attr name="pstsTabBackground" format="reference"/>
        <attr name="pstsShouldExpand" format="boolean"/>
        <attr name="pstsTextAllCaps" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MzszState">
        <attr name="mzszStateDot" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CommentSettingItem">
        <attr name="leftImage" format="reference"/>
        <attr name="titleText" format="reference"/>
        <attr name="detailText" format="reference"/>
        <attr name="rightText" format="reference"/>
        <attr name="rightStyle" format="integer"/>
    </declare-styleable>
    <declare-styleable name="PinnedStickyLayoutListView">
        <attr name="headMinHeight" format="dimension"/>
        <attr name="needStopScroll" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="ProgressWheel">
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="barColor" format="color"/>
        <attr name="rimColor" format="color"/>
        <attr name="rimWidth" format="dimension"/>
        <attr name="spinSpeed" format="integer"/>
        <attr name="circleColor" format="color"/>
        <attr name="radius" format="dimension"/>
        <attr name="barWidth" format="dimension"/>
        <attr name="barLength" format="dimension"/>
        <attr name="delayMillis" format="dimension"/>
        <attr name="contourColor" format="color"/>
        <attr name="contourSize" format="float"/>
    </declare-styleable>

    <!-- Don't touch this -->
    <attr name="numberPickerStyle" format="reference" />
    <!--大滚轮控件自定义属性-->
    <declare-styleable name="NumberPicker">
        <!-- @hide Color for the solid color background if such for optimized rendering. -->
        <attr name="solidColor" format="color|reference" />
        <!-- @hide The divider for making the selection area. -->
        <attr name="selectionDivider" format="reference" />
        <!-- @hide The height of the selection divider. -->
        <attr name="selectionDividerHeight" format="dimension" />
        <!-- @hide The distance between the two selection dividers. -->
        <attr name="selectionDividersDistance" format="dimension" />
        <!-- @hide The min height of the NumberPicker. -->
        <attr name="internalMinHeight" format="dimension" />
        <!-- @hide The max height of the NumberPicker. -->
        <attr name="internalMaxHeight" format="dimension" />
        <!-- @hide The min width of the NumberPicker. -->
        <attr name="internalMinWidth" format="dimension" />
        <!-- @hide The max width of the NumberPicker. -->
        <attr name="internalMaxWidth" format="dimension" />
        <!-- @hide The layout of the number picker. -->
        <attr name="internalLayout" format="reference" />
        <attr name="legacyLayout" format="reference"/>
        <!-- @hide The drawable for pressed virtual (increment/decrement) buttons. -->
        <attr name="virtualButtonPressedDrawable" format="reference"/>
        <!-- 边缘字体的颜色-->
        <attr name="edge_textColor" format="color|reference"/>
        <!-- 中间字体的颜色-->
        <attr name="center_textColor" format="color|reference"/>
        <!-- 被选中的字体的颜色-->
        <attr name="selected_textColor" format="color|reference"/>
        <!-- 单位字符串-->
        <attr name="unitText" format="string"/>
        <attr name="unitTextColor" format="color|reference"/>
    </declare-styleable>

    <!--简易仪表盘的属性-->
    <declare-styleable name="RoundValueBar">
        <attr name="maxValue" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="ProgressButton">
        <attr name="progressDone" format="reference"/>
        <attr name="progressUndone" format="reference"/>
    </declare-styleable>

	  <!--简易游标尺的属性-->
    <declare-styleable name="VernierView">
        <attr name="VernierMaxValue" format="integer"/>
        <!--游标尺的背景布局-->
        <attr name="vernierLayout" format="reference"/>
    </declare-styleable>

    <!-- toggleButton开关 -->
    <declare-styleable name="ToggleButton">
        <attr name="kswThumbDrawable" format="reference"/>
        <attr name="kswThumbColor" format="color|reference"/>
        <attr name="kswThumbMargin" format="dimension|reference"/>
        <attr name="kswThumbMarginTop" format="dimension|reference"/>
        <attr name="kswThumbMarginBottom" format="dimension|reference"/>
        <attr name="kswThumbMarginLeft" format="dimension|reference"/>
        <attr name="kswThumbMarginRight" format="dimension|reference"/>
        <attr name="kswThumbWidth" format="dimension|reference"/>
        <attr name="kswThumbHeight" format="dimension|reference"/>
        <attr name="kswThumbRadius" format="dimension|reference"/>
        <attr name="kswBackRadius" format="dimension|reference"/>
        <attr name="kswBackDrawable" format="reference"/>
        <attr name="kswBackColor" format="color|reference"/>
        <attr name="kswFadeBack" format="boolean"/>
        <attr name="kswBackMeasureRatio" format="float"/>
        <attr name="kswAnimationDuration" format="integer"/>
        <attr name="kswTintColor" format="color|reference"/>
    </declare-styleable>

    <!--大滚轮控件自定义属性-->
    <declare-styleable name="NumberSelector">
        <attr name="numberSolidColor" format="color|reference" />
        <attr name="numberSelectionDivider" format="reference" />
        <attr name="numberSelectionDividerHeight" format="dimension" />
        <attr name="numberSelectionDividersDistance" format="dimension" />
        <attr name="numberInternalMinHeight" format="dimension" />
        <attr name="numberInternalMaxHeight" format="dimension" />
        <attr name="numberSelectTextSize" format="dimension" />
        <attr name="numberInternalMinWidth" format="dimension" />
        <attr name="numberInternalMaxWidth" format="dimension" />
        <attr name="numberInternalLayout" format="reference" />
        <attr name="numberLegacyLayout" format="reference"/>
        <attr name="numberVirtualButtonPressedDrawable" format="reference"/>
        <!-- 边缘字体的颜色-->
        <attr name="number_edge_color" format="color|reference"/>
        <!-- 中间字体的颜色-->
        <attr name="number_center_color" format="color|reference"/>
        <!-- 被选中的字体的颜色-->
        <attr name="number_selected_color" format="color|reference"/>
        <!-- 单位字符串-->
        <attr name="number_unit" format="string"/>
        <attr name="number_unitColor" format="color|reference"/>
        <!-- 显示数字的个数-->
        <attr name="numberSelectorWheelItemCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name="AnalogClockAdjust">
        <attr name="dial" format="reference" />
        <attr name="hand_hour" format="reference" />
        <attr name="hand_minute" format="reference" />
        <attr name="hand_minute_sel" format="reference" />
        <attr name="hand_hour_sel" format="reference" />
        <attr name="touch_unsel" format="reference" />
        <attr name="touch_sel" format="reference" />
        <attr name="touch_pressed" format="reference" />
